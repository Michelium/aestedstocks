{% extends 'base.html.twig' %}

{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/v/bs4/dt-1.10.20/datatables.min.css"/>
{% endblock %}

{% block body %}
    <h2>CategoriÃ«noverzicht</h2>
    <hr>
    <div class="row">
        <div class="col-lg-12">
            <button class="btn btn-success float-right mb-4 category_action_category_button" data-action="add" data-id="0"><i class="fa fa-plus"></i> Toevoegen</button>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <table class="table table-sm table-hover table-responsive-md" id="product_table">
                <tr>
                    <th>Naam</th>
                    <th>Aangemaakt op</th> 
                    <th>Laatst bewerkt op</th>
                    <th>Acties</th>
                </tr>
                {% for category in categories  %}
                    <tr>
                        <td>{{ category.name }}</td>
                        <td>{{ category.createdAt|date('d-m-Y') }}</td>
                        <td>{{ category.modifiedAt|date('d-m-Y') }}</td>
                        <td>
                            <button type="button" data-action="update" data-id="{{ category.id }}" class="btn btn-sm btn-warning category_action_category_button"><i class="fa fa-pencil"></i> Bewerken</button>
                            <a href="{{ path('admin_function_deletecategory', {id : category.id}) }}" class="btn btn-sm btn-danger"><i class="fa fa-trash"></i> Verwijderen</a>
                        </td>
                    </tr>
                {% endfor %}
            </table>
        </div>
    </div>

    <div class="category-modal modal fade" id="category-modal" tabindex="-1" role="dialog" aria-labelledby="category-modalLabel" aria-hidden="true">
        <div class="modal-dialog modal-lg" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="category-modalLabel">Categorie</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary close-modal" data-dismiss="modal">Afsluiten</button>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script type="text/javascript" src="https://cdn.datatables.net/v/bs4/dt-1.10.20/datatables.min.js"></script>
{% endblock %}
