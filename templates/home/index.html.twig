{% extends 'base.html.twig' %}

{% block body %}
    <div class="row">
        <div class="col-lg-12">
            <h2>Welkom bij Stock!</h2>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col-lg-12">
            <h5>Scan productinformatie</h5>
            <p>Scan een enkel product en krijg de productinformatie</p>
            <button class="btn btn-block btn-info mb-4 scan">Scan</button>
            <input type="text" id="scan_input" placeholder="Typ een code of scan een product" class="form-control" autofocus>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 scan_output">
            <div class="scan_output-modal modal fade" id="scan_output-modal" tabindex="-1" role="dialog" aria-labelledby="scan_output-modalLabel" aria-hidden="true">
                <div class="modal-dialog modal-lg" role="document">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="scan_output-modalLabel">Product</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            data not found
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary close-modal" data-dismiss="modal">Afsluiten</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <hr>
    <div class="row">
        <div class="col-lg-12 scan_multiple_alert-box"></div>
        <div class="col-lg-12">
            <h5>Scanlijst</h5>
            <p>Scan hieronder meerdere producten</p>
            <button class="btn btn-block btn-info mb-4 scan_multiple_button">Scan</button>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <input type="text" id="scan_multiple_input" placeholder="Typ een code of scan een product" class="form-control" autofocus>
            <table class="table table-bordered table-hover table-sm mt-4 scan_multiple_table">
                <thead>
                <tr>
                    <th>Product</th>
                    <th>Code</th>
                    <th>Acties</th>
                </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
            <button class="btn btn-success btn-sm scan_multiple_submit" type="button"><i class="fa fa-plus"></i> Bovenstaande lijst toevoegen</button>
            <button class="btn btn-danger btn-sm scan_multiple_remove" type="button"><i class="fa fa-trash"></i> Bovenstaande lijst verwijderen</button>
        </div>
    </div>
{% endblock %}
